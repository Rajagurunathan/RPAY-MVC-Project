@model AdminDashBoard.Models.Plan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminLayoutNew.cshtml";
}

<br />
<div class="card shadow mb-5">
    <div class="card-header py-4" style="background-color:#2b2525">
        <h6 class="m-0 font-weight-bold" style="text-align:center; font-weight:bold; color:white"> Add New Operator </h6>
    </div>




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Operator Name -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center">
                Enter the Plan Name
            </h4>
            <div class="form-group" style="text-align:center; margin:0 auto; width:300px">


                <div class="col-md-12">
                    @Html.EditorFor(model => model.plan_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.plan_name, "", new { @class = "text-danger" })
                </div>

            </div>

            <!-- Plan Description -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center">
                Plan Description
            </h4>
            <div class="form-group" style="text-align:center; margin:0 auto; width:300px">

                <div class="col-md-12">
                    @Html.EditorFor(model => model.plan_description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.plan_description, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Amount -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center"> Amount  </h4>

            <div class="form-group">

                <div class="col-md-12" style="text-align:center; margin:0 auto; width:300px">
                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- validity -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center">  Validity  </h4>

            <div class="form-group" style="text-align:center; margin:0 auto; width:300px">

                <div class="col-md-12">
                    @Html.EditorFor(model => model.validity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.validity, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Plan Type -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center">  Plan Type  </h4>

            <div class="form-group" style="text-align:center; margin:0 auto; width:300px">

                <div class="col-md-12">
                    @Html.EditorFor(model => model.plan_type, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.plan_type, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Operator -->
            <br />
            <h4 class="text-danger" style="font-weight:bold; color:crimson; text-align:center">  Operator  </h4>

            <div class="form-group" style="text-align:center; margin:0 auto; width:300px">

                <div class="col-md-12">
                    @Html.DropDownList("operator_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.operator_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="text-align:center">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <input type="submit" value="Create" class="btn btn-danger" />
                </div>
            </div>


        </div>
    }

        
</div>

    @Html.ActionLink("Back to List", "Index")
