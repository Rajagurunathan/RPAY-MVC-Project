@model AdminDashBoard.Models.Operator

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminLayoutNew.cshtml";
}
<br />
    <div class="card shadow mb-5">
        <div class="card-header py-4" style="background-color:#2b2525">
            <h6 class="m-0 font-weight-bold" style="text-align:center; font-weight:bold; color:white"> Add New Operator </h6>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <br />
                    <h3 class="text-danger" style="text-align:center; font-weight:bold; color:crimson"> Enter the Operator Name </h3>

                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="margin:0 auto; width:200px">
                   
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.operator_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.operator_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="text-align:center">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        <input type="submit" value="Create" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div>
        @Html.ActionLink("Back to List", "IndexEdit")
    </div>
