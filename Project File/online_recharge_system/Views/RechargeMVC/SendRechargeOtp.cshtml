@using System.Web.UI.WebControls
@model online_recharge_system.Models.PasswordReset

@{
    ViewBag.Title = "SendRechargeOtp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section style="background-color: #d9e4f5; background-image: linear-gradient(315deg, #d9e4f5 0%, #f5e3e6 74%);">
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <div class="container col-md-3 col-lg-3 col-sm-3">
        @using (Html.BeginForm())
        {
    @*@Html.AntiForgeryToken()*@
            <div class="card" style="background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);">
                <div class="card-header" style="background-color: #045de9; background-image: linear-gradient(315deg, #045de9 0%, #09c6f9 74%);"><h5 class="text-white">GATEWAY</h5></div>
                <div class="card-body">
                    <img src="~/images/direcpay_logo.png" style="width: 300px" class="card-img-top"/>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class="card-group">
                        @*@Html.LabelFor(model => model.otp, htmlAttributes: new {@class = "control-label col-md-2"})*@
                        @*<label for="model.otp" class="card-group">VERIFY OTP</label>*@
                        <div class="col">
                            @Html.EditorFor(model => model.otp, new {htmlAttributes = new {@class = "form-control", @PlaceHolder = "ENTER OTP"}})
                            @Html.ValidationMessageFor(model => model.otp, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="card-group">
                        <div class="col">
                            <input type="submit" value="Pay" class="btn btn-danger text-white"/>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="background-color: #045de9; background-image: linear-gradient(315deg, #045de9 0%, #09c6f9 74%);">

                </div>
            </div>
        }
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
</section>
